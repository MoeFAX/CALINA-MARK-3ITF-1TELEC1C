@{
}
@model Instructor;
<h1>Delete Instructor details?</h1>
<form class='p-2 row gx-3 gy-2 align-items-center' method="POST" asp-action="Delete" asp-controller="Instructor">
    <div class="form-group">
        <label asp-for="InstructorId" hidden>Instructor ID</label>
        <input class="form-control" asp-for="InstructorId" placeholder="Enter Instructor ID" hidden>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" placeholder="Enter first name" readonly>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" placeholder="Enter last name" readonly>
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select class="form-control" asp-for="IsTenured" readonly>
            <option value="true">Full-Time</option>
            <option value="false">Part-Time</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="InstructorRank">Instructor Rank</label>
        <select class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Rank))" asp-for="InstructorRank" readonly>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Date Hired</label>
        <input class="form-control" asp-for="HiringDate" readonly>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-primary-secondary">Cancel</button>
</form>