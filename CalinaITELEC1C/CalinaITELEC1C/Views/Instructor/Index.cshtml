@{
}

@model IEnumerable<Instructor>;
<h1>Instructor List</h1>
<input class="btn btn-primary" type="button" value="Add Instructor"
       onclick="@("window.location.href='" + @Url.Action("AddInstructor", "Instructor") + "'");" />
<table class="table table-dark">
    <tr>
        <th colspan="10">Instructor</th>
    </tr>
    <tr>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Status</td>
        <td>ID</td>
        <td>Details</td>
        <td>Update</td>
    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName</td>
            <td>@instructor.LastName</td>
            <td>@instructor.InstructorRank</td>
            <td>@instructor.HiringDate</td>
            <td>@{
                    if(instructor.IsTenured == true)
                    {
                        <span>Full-Time</span>
                    }
                    else
                    {
                        <span>Part-Time</span>
                    }
                }</td>
            <td>@instructor.InstructorId</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.InstructorId">Show Details</a></td>
            <td><a asp-action="UpdateInstructor" asp-route-id="@instructor.InstructorId">Update</a></td>

        </tr>
        
    }
</table>