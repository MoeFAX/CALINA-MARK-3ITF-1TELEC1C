@{
}
@model Student;
<h1>Delete Student Details?</h1>
<form class='p-2 row gx-3 gy-2 align-items-center' method="POST" asp-action="Delete" asp-controller="Student">
    <div class="form-group">
        <label asp-for="StudentId" hidden>Student ID</label>
        <input class="form-control" asp-for="StudentId" placeholder="Enter Student ID" hidden>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Name</label>
        <input class="form-control" asp-for="FirstName" placeholder="Enter first name" readonly>
    </div>
    
    <div class="form-group">
        <label asp-for="LastName">Name</label>
        <input class="form-control" asp-for="LastName" placeholder="Enter last name" readonly>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email" readonly>
    </div>
    <div class="form-group">
        <label asp-for="GPA">GPA</label>
        <input class="form-control" asp-for="GPA" placeholder="Enter GPA" readonly>
    </div>
    <div class="form-group">
        <label asp-for="StudentCourse">Course</label>
        <select class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Course))" asp-for="StudentCourse" readonly>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="AdmissionDate">Date Enrolled</label>
        <input class="form-control" asp-for="AdmissionDate" readonly>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-primary-secondary">Cancel</button>
</form>